---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";

// Puedes cambiar este texto cuando quieras
const TAGLINE = "// dev logs, reseñas y notas personales";
---

<header class="rp-header">
	<nav class="rp-nav" aria-label="Navegación principal">
		<div class="brand">
			<h2 class="title">
				<a href="/">{SITE_TITLE}</a>
			</h2>
			<p class="tagline">{TAGLINE}</p>
		</div>

		<div class="internal-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/acerca">Acerca de</HeaderLink>
		</div>
	</nav>
</header>

<style>
	.rp-header {
		margin: 0;
		padding: 0 1em;

		background: rgb(var(--bg-surface));
		box-shadow: 0 1px 0 rgba(255, 255, 255, 0.04);

		position: sticky;
		top: 0;
		z-index: 100;
	}

	.rp-nav {
		max-width: 1100px;
		margin: 0 auto;
		display: flex;
		align-items: flex-end;
		justify-content: space-between;
		gap: 1.5em;
	}

	.brand {
		display: flex;
		flex-direction: column;
		gap: 0.35em;
	}

	.title {
		margin: 0;
		font-size: 1.15em;
		letter-spacing: 0.01em;
	}

	.title a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		font-family:
			ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
			"Liberation Mono", "Courier New", monospace;
		font-weight: 700;
	}

	.tagline {
		margin: 0;
		color: rgb(var(--gray));
		font-size: 0.95em;
		letter-spacing: 0.01em;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.9em;
		white-space: nowrap;
	}

	/* Links del nav */
	.rp-header :global(a) {
		color: rgb(var(--gray-dark));
		text-decoration: none;
	}

	/* Los HeaderLink suelen aplicar .active; esto lo mantiene */
	.rp-header :global(a.active) {
		border-bottom: 2px solid var(--accent);
		padding-bottom: 0.35em;
		font-weight: 600;
	}

	/* Subrayado mínimo en hover (sin “brillo”) */
	.rp-header :global(a:hover) {
		border-bottom: 2px solid rgba(255, 255, 255, 0.12);
		padding-bottom: 0.35em;
	}

	/* Mobile: apila marca arriba y nav abajo */
	@media (max-width: 720px) {
		.rp-header {
			padding: 1em;
		}

		.rp-nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75em;
		}

		.internal-links {
			gap: 0.75em;
			flex-wrap: wrap;
		}
	}
</style>
